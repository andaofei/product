@import "../../../commom/stylus/variable.styl"
.App
  max-width 1920px
  margin 0 auto
  width 100%
  height 100%
  display flex
  flex-direction column
  padding 0 40px
  .App-header
    .App-title
      text-align center
      padding 2.5rem 0
      .img-box
        display inline-block
        width 180px
        height 50px
        max-width 18vw
        max-height 6vh
        background url("../images/logo.png") no-repeat
        background-size 100% 100%
  .App-intro
    flex 1 1 auto
    display flex
    flex-direction column
    .menu-title
      display flex
      padding 0 40px
      .menu-img
        background url('../images/menu.png') no-repeat
        display inline-block
        background-size 100% 100%
        width 20px
        height 20px
      .menu-text
        opacity 0.9
        font-size 1.2rem
        line-height 20px
        color $color-text
        padding-left 10px
    .list-box
      position relative
      flex 1 1 auto
      .item-inner
        padding 40px 0
        position absolute
        width 100%
        height 100%
        top 0
        left 0
        display flex
        flex-wrap wrap
        .item
          width 25%
          height 50%
          a
            display flex
            flex-direction column
            width 100%
            height 100%
            padding 20px 30px
            transition 0.3s
            .item-img-box
              position relative
              flex 1 1 85%
              width 100%
              background linear-gradient(135.79deg, $color-line 0%, $color-back  100%)
              border-radius 12px
              .item-img
                position relative
                background-repeat no-repeat
                background-size 100% 100%
                height 100%
                width 100%
                background-color rgba(0, 0, 0, 1)
                filter opacity(15%)
                background-blend-mode luminosity
                border-radius 12px
              .item-img-child
                border-radius 12px
                z-index 10
                position absolute
                top 0
                left 0
                width 100%
                height 100%
                display flex
                flex-direction column
                .item-img-inner
                  border-radius 12px
                  box-shadow 0 10px 20px 0 rgba(40, 39, 48,0.5)
                  flex 1 1 auto
                  display flex
                  flex-direction column
                  justify-content center
                  text-align center
                  cursor pointer
                img
                  display inline-block
                  width 5rem
                  height 5rem
                .hover-text
                  width 100%
                  color $color-text
                  background-color rgba(40, 39, 48, 0.5)
                  height 20%
                  transition 0.2s
                  .hover-text-inner
                    height 100%
                    text-align center
                    font-size 1.2rem
                    display flex
                    flex-direction column
                    justify-content center
                    span
                      opacity 1
            .item-title
              cursor pointer
              flex 0 0 15%
              display flex
              flex-direction column
              justify-content center
            .item-title-box
              display flex
              justify-content center
            span
              display inline-block
              text-align center
              overflow hidden
              text-overflow ellipsis
              white-space nowrap
              font-size 1rem
              line-height 1.5rem
              opacity 0.8
            .item-arrow-box
              display flex
              flex-direction column
              justify-content center
              padding-left 10px
              .item-arrow
                display inline-block
                vertical-align bottom
                width 1rem
                height 18px
                background url("../images/arrow/jt@3x.png") center center no-repeat
                background-size 100% 100%
            .item-title-hover
              flex 0 0 18%
              border-radius 0 0 12px 12px
              background-color $color-back
              box-shadow 0 10px 20px 0 rgba(0, 0, 0, 0.1)
              span
                opacity 1
          .item-hover
            padding-top 0
            transition 0.2s
    .item-img-hover
      border-radius 12px 12px 0 0 !important

    .example-appear
      opacity 0.01

    .example-appear.example-appear-active
      opacity 1
      transition opacity 2s ease-in


