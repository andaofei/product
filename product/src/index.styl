body, html
  margin 0
  padding 0
  font-family sans-serif
  width 100%
  height 100%
body
  position relative
  margin 0
  padding 0
  *
    margin 0
    padding 0
    box-sizing border-box
    //font-family: "微软雅黑", "Times New Roman", Georgia, Serif
    font-family PingFang SC
a
  text-decoration none
  color #fff
li
  list-style none
#root
  z-index 10
  width 100%
  height 100%
  opacity 1
  position relative
.wrapper
  width 100%
  height 100%
.particle
   width 100%
   height 100%
   position absolute
   top 0
   left 0
   overflow hidden
   opacity 1
   z-index 5
   box-shadow: 0 0 84px 0 rgba(26,29,40,0.61);
   background radial-gradient(circle, #434756 0%, #282730 100%)
   canvas
     opacity 0.6
